/* miniprogram/pages/home/home.wxss */

.header {
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.header swiper{
  height: 100%;
}

.header image{
  width: 100%;
}

.list {
  box-sizing: border-box;
  width: 100%;
  padding: 0 15rpx;
  border-top: 1px solid #fff;
}

.product {
  background: #fff;
  margin: 20rpx 0;
  padding: 15rpx;
  border-radius: 10rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.desc {
  font-size: 26rpx;
  padding: 10rpx 0 5rpx;
}

.price {
  font-size: 30rpx;
  padding: 5rpx 0 10rpx;
}
.price text{
  margin-right: 10rpx;
}
.p1{
  font-weight: bold;
  color: red;
}

.p2{
  text-decoration: line-through;
  font-size: 26rpx;
  color: #878787;
}

.p3{
  display: inline-block;
  padding: 2rpx 10rpx;
  background: red;
  color: #fff;
  font-size: 26rpx;
}

.img {
  display: flex;
  justify-content: space-around;
}

.img image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
}
