/* pages/order/order.wxss */
.container{
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}
.order_top{
  display: flex;
  justify-content: space-around;
  background: #fff;
  flex-shrink: 0;
}
.order_top_item{
  padding: 20rpx 0;
  flex: 1;
  text-align: center;
}
.order_top_item.select{
  border-bottom: 2px solid #14c4ad;
  color: #14c4ad;
}
swiper{
  flex-grow: 2;
}
.order_list{
  height: 100%;
}
.order_item{
  background: #fff;
  margin: 10rpx 0 10rpx;
}
.order_status{
  text-align: right;
  border-bottom: 1px solid #f0f0f0;
  padding: 20rpx;
}
.order_info{
  padding: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}
.order_detail{
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.order_detail_name{
  flex-shrink: 0;
  margin-right: 60rpx;
  color: #aaa;
}
.ta_r{
  text-align: right;
}
.order_action{
  display: flex;
  flex-direction: row-reverse;
  padding: 20rpx;
}
.order_btn{
  padding: 10rpx 20rpx;
  border: 1px solid #aaa;
  border-radius: 50rpx;
  color: #aaa;
  margin-left: 20rpx;
}

.order_btn_main{
  border: 1px solid #14c4ad;
  color: #14c4ad;
}
.order_none{
  text-align: center;
  color: #aaa;
  padding: 20rpx;
}